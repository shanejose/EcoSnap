<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/mainTheme"
    >
    <!-- ImageView at the top -->
    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="387dp"
        android:layout_height="512dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <!-- LinearLayout at the bottom for text and button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TextView for displaying instructions about results -->
        <TextView
            android:id="@+id/result_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/result_title"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <!-- Button to go back to the WelcomeActivity -->
        <Button
            android:id="@+id/btnCheckResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Check Results" />

    </LinearLayout>

</LinearLayout>