<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@color/mainTheme">

    <!-- ImageView on the left -->
    <ImageView
        android:id="@+id/resultImageView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true" />

    <!-- LinearLayout for text and button on the right -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- TextView for displaying instructions about results -->
        <TextView
            android:id="@+id/result_instruction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/result_title"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- TextView to display recyclability status -->
        <TextView
            android:id="@+id/item_recyclable_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recyclable_status"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Button to go back to the WelcomeActivity -->
        <Button
            android:id="@+id/btnCheckResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Results"
            android:layout_marginTop="32dp" />
    </LinearLayout>
    <Button
        android:id="@+id/logOut"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="16dp"
        android:text="@string/logOut"
        app:layout_constraintBottom_toTopOf="@id/resultHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent" />
</LinearLayout>